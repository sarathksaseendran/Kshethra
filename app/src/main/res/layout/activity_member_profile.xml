<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.member.MemberProfileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <com.sarathk.sk.kshethra.utilities.CircleImageView
                android:id="@+id/userPicImageView"
                android:layout_width="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="110dp"
                android:src="@drawable/logo_default"
                app:civ_circle_background_color="@color/colorWhite"/>

            <ImageView
                android:id="@+id/addProfButton"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="18dp"
                android:layout_gravity="bottom|end"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:tint="@color/colorWhite"
                android:scaleType="fitCenter"
                android:background="@drawable/layout_round_green"
                android:src="@drawable/ic_upload"
                android:layout_marginRight="18dp" />

        </FrameLayout>

        <View android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        style="@style/FontSizeSixteenBold"
        android:id="@+id/nameTextView"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/colorGreen"
        android:id="@+id/dobTextView"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:maxLines="1"
        style="@style/FontSizeFifteen"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/colorGreen"
        android:id="@+id/starTextView"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:maxLines="1"
        style="@style/FontSizeFifteen"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/housenameTextView"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        style="@style/FontSizeFifteen"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mobileTextView"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        style="@style/FontSizeFifteen"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:autoLink="web|email|phone|map"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/landlineTextView"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        style="@style/FontSizeFourteen"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:autoLink="web|email|phone|map"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/addressTextView"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        style="@style/FontSizeFourteen"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:maxLines="2"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/familyHeadRelationTextView"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        style="@style/FontSizeFourteen"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:maxLines="2"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:id="@+id/myfamilyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>